<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.DetailPaymnent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp"
        android:weightSum="1">

        <!-- Header (Back Button + Titolo) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Bottone Indietro -->
            <LinearLayout
                android:id="@+id/goBackPreviusPage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical"
                android:padding="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/baseline_arrow_back_ios_new_24" />

            </LinearLayout>

            <!-- Titolo -->
            <TextView
                android:id="@+id/chatUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pagamento"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginLeft="16dp"/>
        </LinearLayout>

        <!-- Spazio per separare -->
        <View
            android:layout_width="match_parent"
            android:layout_height="16dp"/>

        <!-- Metodo di pagamento -->
        <RadioGroup
            android:id="@+id/paymentMethodGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/rbCreditCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Carta di Credito/Debito"
                android:checked="true"/>

            <RadioButton
                android:id="@+id/rbPaypal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PayPal"/>
        </RadioGroup>

        <!-- Dettagli Carta (mostrati solo se carta di credito selezionata) -->
        <EditText
            android:id="@+id/etCardNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Numero Carta"
            android:inputType="number"
            android:maxLength="16"
            android:padding="10dp"
            android:visibility="visible"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <EditText
                android:id="@+id/etExpiryDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="MMYY"
                android:inputType="number"/>

            <EditText
                android:id="@+id/etCVC"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="CVC"
                android:inputType="number"
                android:maxLength="3"/>
        </LinearLayout>

        <!-- Spazio per separare -->
        <View
            android:layout_width="match_parent"
            android:layout_height="16dp"/>

        <!-- Importo totale -->
        <TextView
            android:id="@+id/tvTotalAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Totale: â‚¬0.00"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_gravity="center"/>

        <!-- Spazio dinamico per spingere il bottone in basso -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <!-- Pulsante di pagamento -->
        <Button
            android:id="@+id/btnPayNow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Paga Ora"
            android:backgroundTint="@color/primary"
            android:textColor="@color/light"
            android:layout_marginTop="20dp"/>

    </LinearLayout>

</FrameLayout>
