<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".screens.HomeScreen"
    android:theme="@style/NoBackText">

    <!-- TODO: Update blank fragment layout -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:ignore="UselessParent">

            <!-- Updated Search Section -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/search_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#EEEEEE"
                android:layout_margin="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/DarkSearch"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <!-- Menu Button -->
                    <ImageButton
                        android:id="@+id/menuButton"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/baseline_menu_24"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Menu"
                        app:tint="@color/primary"
                        tools:ignore="HardcodedText" />

                    <!-- Search Input -->
                    <EditText
                        android:id="@+id/editTextText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:autofillHints=""
                        android:hint="Search"
                        android:inputType="text"
                        android:drawablePadding="8dp"
                        android:background="@android:color/transparent"
                        android:textSize="16sp"
                        android:padding="12dp"
                        tools:ignore="HardcodedText,RtlHardcoded" />

                    <Button
                        android:id="@+id/searchButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Cerca"
                        android:textAllCaps="false"
                        />
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:id="@+id/filterContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:gravity="center_vertical"
                >
                <Button
                    android:id="@+id/barattoButton"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="Baratto"
                    android:textAllCaps="false"
                    />
                <EditText
                    android:id="@+id/minPriceSetter"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginLeft="8dp"
                    android:autofillHints=""
                    android:hint="0"
                    android:inputType="number"
                    android:background="@color/primary"
                    android:textSize="12sp"
                    android:padding="8dp"
                    android:textColor="@color/secondary"
                    tools:ignore="HardcodedText,RtlHardcoded"
                    />
                <EditText
                    android:id="@+id/maxPriceSetter"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginLeft="8dp"
                    android:autofillHints=""
                    android:hint="1000"
                    android:inputType="number"
                    android:background="@color/primary"
                    android:textSize="12sp"
                    android:padding="8dp"
                    android:textColor="@color/secondary"
                    tools:ignore="HardcodedText,RtlHardcoded"
                    />
                <com.google.android.material.slider.RangeSlider
                    android:id="@+id/rangePrezziSlider"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:valueFrom="0"
                    android:valueTo="1000"
                    app:values="@array/initial_values"
                    android:stepSize="1"
                    app:labelBehavior="gone"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_below="@id/search_card"
                android:orientation="vertical"
                android:padding="16dp"
                tools:ignore="ObsoleteLayoutParam">

                <TextView
                    android:id="@+id/recents_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Some Items"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:paddingBottom="8dp"
                    tools:ignore="HardcodedText" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/productList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    android:clipToPadding="false"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp" />

            </LinearLayout>
        </LinearLayout>


</FrameLayout>