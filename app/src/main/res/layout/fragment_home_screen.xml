<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".screens.HomeScreen">

    <!-- TODO: Update blank fragment layout -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Updated Search Section -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/search_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <!-- Search Input -->
                    <EditText
                        android:id="@+id/editTextText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Search"
                        android:inputType="text"
                        android:drawableLeft="@drawable/baseline_search_24"

                        android:drawablePadding="8dp"
                        android:background="@android:color/transparent"
                        android:textSize="16sp"
                        android:padding="12dp"
                        android:textColor="@color/secondary" />

                    <!-- Menu Button -->
                    <ImageButton
                        android:id="@+id/menuButton"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/baseline_menu_24"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Menu"
                        app:tint="@color/primary" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_below="@id/search_card"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/recents_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recents Items"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:paddingBottom="8dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/horizontal_recycler_view_recents"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:clipToPadding="false"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp" />
            </LinearLayout>
            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_below="@id/search_card"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/lastAdded_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Last Added"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:paddingBottom="8dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/horizontal_recycler_view_lastadded"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:clipToPadding="false"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp" />
            </LinearLayout>
        </LinearLayout>


</FrameLayout>