<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.DetailProdScreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="25dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/goBackPreviusPage"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:layout_marginLeft="0dp"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_arrow_back_ios_new_24"/>
                <TextView

                    android:text="Indietro "
                    android:layout_gravity="start"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <TextView
                android:id="@+id/productName"
                android:layout_gravity="center"
                android:layout_width="190dp"
                android:layout_marginLeft="40dp"
                android:textSize="24dp"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:text="Sneakers Verdi"/>
        </LinearLayout>
        <!-- Search Bar -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/search_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <!-- Search Input -->
                <EditText
                    android:id="@+id/editTextText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Search"
                    android:inputType="text"
                    android:drawablePadding="8dp"
                    android:background="@android:color/transparent"
                    android:textSize="16sp"
                    android:padding="12dp"
                    android:textColor="@color/secondary" />

                <!-- Menu Button -->
                <ImageButton
                    android:id="@+id/menuButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/baseline_menu_24"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Menu"
                    android:backgroundTint="@color/secondary"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
        <!-- Product Image -->

        <ImageView
            android:id="@+id/productImage"
            android:layout_width="match_parent"
            android:src="@drawable/shoes"
            android:layout_height="210dp"
            android:layout_marginTop="16dp"
            android:scaleType="centerCrop"
            android:contentDescription="image Prod" />

        <!-- Product Name and Price -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="12dp"
            >

            <TextView
                android:id="@+id/productPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:textAlignment="textStart"
                android:textColor="@android:color/black"
                android:textSize="30sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:text="$"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Descrizione:  "></TextView>

            <TextView
                android:id="@+id/descrizione"
                android:layout_width="match_parent"
                android:layout_height="50dp"></TextView>
        </LinearLayout>

        <!-- Seller Info -->
        <LinearLayout
            android:layout_margin="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/sellerImage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerCrop"
                android:src="@drawable/user"
                android:background="@drawable/circle_shape"
                android:layout_marginEnd="8dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/sellerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Melissa Peters"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/sellerProductsCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5 product online"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray" />
            </LinearLayout>
        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:layout_margin="12dp"
            android:gravity="center">

            <Button
                android:id="@+id/buyButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Compra"
                android:backgroundTint="@color/primary"
                android:textColor="@android:color/white"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/tradeButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Scambia"
                android:backgroundTint="@color/primary"
                android:textColor="@android:color/white"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/contactButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Contatta"
                android:backgroundTint="@color/primary"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <!-- Tags -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:text="Tags:"
            android:layout_marginTop="16dp"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <com.google.android.flexbox.FlexboxLayout
            android:layout_margin="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <TextView
                android:background="@drawable/tag_background"
                android:id="@+id/tag1"

                style="@style/TagStyle"
                android:text="Comode" />

            <TextView
                android:id="@+id/tag2"
                android:background="@drawable/tag_background"
                style="@style/TagStyle"
                android:text="Tag" />

            <TextView
                android:id="@+id/tag3"
                android:background="@drawable/tag_background"
                style="@style/TagStyle"
                android:text="Verdi" />

            <TextView
                android:id="@+id/tag4"
                android:background="@drawable/tag_background"
                style="@style/TagStyle"
                android:text="Usato" />
        </com.google.android.flexbox.FlexboxLayout>

    </LinearLayout>

</FrameLayout>