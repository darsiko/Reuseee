<resources xmlns:tools="http://schemas.android.com/tools">
<!-- Base application theme. -->
<style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
    <item name="colorPrimary">@color/primary</item>
    <item name="colorSecondary">@color/secondary</item>
    <item name="android:colorBackground">@color/dark</item>
    <item name="android:textColorPrimary">@color/dark</item>
</style>

<style name="AppTheme.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
    <item name="colorPrimary">@color/primary</item>
    <item name="colorSecondary">@color/secondary</item>
    <item name="android:colorBackground">@color/light</item>
    <item name="android:textColorPrimary">@color/dark</item>
</style>

    <style name="NoBackText">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
    </style>

<style name="WhiteText">
    <item name="android:textColor">@android:color/white</item>
    <item name="android:textColorHint">@android:color/white</item>
    <item name="android:textColorPrimary">@android:color/white</item>
</style>

    <style name="DarkSearch">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:background">@color/RegBackDark</item>
    </style>

<style name="RegActivityBack">
    <item name="android:background">@color/RegBackDark</item>
</style>

<style name="TagStyle">
    <item name="android:background">@drawable/tag_background_dark</item>
    <item name="android:layout_marginEnd">8dp</item>
    <item name="android:layout_marginBottom">8dp</item>
    <item name="android:padding">8dp</item>
    <item name="android:textColor">@android:color/white</item>
    <item name="android:textSize">12sp</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:gravity">center</item>
</style>

<style name="RoundedCorner" parent="">
    <item name="cornerSize">60dp</item>
</style>

<style name="CustomDialog" parent="Theme.AppCompat.Light.Dialog">
    <item name="android:windowIsFloating">true</item>
    <item name="android:backgroundDimAmount">0.6</item>
    <item name="android:windowBackground">@android:color/transparent</item>
</style>

</resources>